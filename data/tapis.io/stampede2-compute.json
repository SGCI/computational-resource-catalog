{
  "schemaVersion": "0.0.1",
  "id": "resources.sciencegateways.org.tapis.io.stampede2-compute",
  "virtualOrganizationId": "tapis.io",
  "virtualOrganizationResourceId": "stampede2-compute",
  "name": "tacc-stampede2-compute",
  "description": "WIP: Sample compute resource for TACC Stampede2 Cluster",
  "resourceType": "COMPUTE",
  "host": "stampede2.tacc.utexas.edu",
  "resource": {
    "schedulerType": "BATCH",
    "connection": {
      "connectionProtocol": "SSH",
      "securityProtocol": "SSHKEYS",
      "port": 22
    },
    "storageType": "POSIX",
      "fileSystem": {
        "rootDir": "/",
        "scratchDir": "/scratch",
        "workDir": "/work",
        "homeDir": "/home"
      },
    "batchSystem": {
      "jobManager": "SLURM",
      "commandPaths": [
        {
          "name": "SUBMISSION"
        }],
        "partitions": [
          {
            "name": "normal",
            "totalNodes": 256,
            "nodeHardware": {
              "cpuType": "KNL CPUs @ 1.40GHz",
              "cpuCount": 68,
              "memoryType": "DDR4",
              "memorySize": "96 GB"
            
            }
          }
        ]
      }
  }
}

