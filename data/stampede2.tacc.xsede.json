{
  "schemaVersion": "0.0.1",
  "host": "stampede2.tacc.xsede.org",
  "name": "tacc-xsede-stampede2",
  "description": "WIP: Sample resource for TACC Stampede2 Cluster",
  "connection": {
    "connectionProtocol": "SSH",
    "securityProtocol": "SSHKEYS",
    "port": 22
  },
  "computeResources": [
    {
      "schedulerType": "BATCH",
      "connection": {
        "connectionProtocol": "SSH",
        "securityProtocol": "SSHKEYS",
        "port": 22
      },
      "batchSystem": {
        "jobManager": "SLURM",
        "commandPaths": [
          {
            "name": "SUBMISSION"
          }
        ],
        "partitions": [
          {
            "name": "normal",
            "totalNodes": 256,
            "nodeHardware": {
              "cpuType": "KNL CPUs @ 1.40GHz",
              "cpuCount": 68,
              "memoryType": "DDR4",
              "memorySize": "96 GB"
            }
          }
        ]
      }
    },
    {
      "schedulerType": "FORK",
      "connection": {
        "connectionProtocol": "SSH",
        "securityProtocol": "SSHKEYS",
        "port": 22
      },
      "forkSystem": {
        "systemType": "LINUX"
      }
    }
  ],
  "storageResources": [
    {
      "storageType": "POSIX",
      "connections": [
        {
          "connectionProtocol": "SSH",
          "securityProtocol": "SSHKEYS",
          "port": 22
        }
      ],
      "fileSystems": [
        {
          "homeDir": "/home1",
          "scratchDir": "/scratch"
        }
      ]
    }
  ]
}
